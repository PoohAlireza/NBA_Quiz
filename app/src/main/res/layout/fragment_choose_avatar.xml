<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".ui.register.ChooseAvatarFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_register" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back_choose_avatar"
            android:layout_width="@dimen/size_back_arrow"
            android:layout_height="@dimen/size_back_arrow"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back"
            app:tint="@color/cocoa_milk" />

        <com.some_package.nbaquiz.custom_view.CustomButtonQuestrial
            android:id="@+id/btn_change_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="Change"
            android:textAllCaps="false"
            android:textColor="@color/cocoa_milk"
            android:textSize="@dimen/text_size_normal_X2" />


    </RelativeLayout>

    <com.some_package.nbaquiz.custom_view.CustomTextViewRaleway
        android:id="@+id/tv_name_choose_avatar_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cocoa_milk"
        android:textSize="@dimen/text_size_normal_X2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hyakkimaru" />

    <ImageView
        android:id="@+id/iv_avatar_choose_avatar_fragment"
        android:layout_width="@dimen/size_avatar_frag_choose_avatar"
        android:layout_height="@dimen/size_avatar_frag_choose_avatar"
        android:src="@drawable/avatar_1"
        app:layout_constraintBottom_toTopOf="@id/tv_name_choose_avatar_fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".95" />

    <com.some_package.nbaquiz.custom_view.CustomTextViewQuestrial
        android:id="@+id/tv_team_choose_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATL"
        android:textColor="@color/cocoa_milk"
        android:textSize="@dimen/text_size_normal_X1"
        app:layout_constraintBottom_toTopOf="@id/iv_avatar_choose_avatar_fragment"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/iv_avatar_choose_avatar_fragment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

    <com.some_package.nbaquiz.custom_view.CustomButtonRaleway
        android:id="@+id/btn_next_choose_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/cocoa_milk"
        android:textSize="@dimen/text_size_big_X2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias=".9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".96" />

    <com.some_package.nbaquiz.custom_view.CustomLoading
        android:id="@+id/progress_choose_avatar_fragment"
        android:layout_width="@dimen/width_progress_frag_choose_avatar"
        android:layout_height="@dimen/height_progress_frag_choose_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".9"
        android:visibility="gone"
        />




</androidx.constraintlayout.widget.ConstraintLayout>