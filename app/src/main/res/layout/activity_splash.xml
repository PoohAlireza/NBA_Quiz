<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_splash"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".ui.splash.SplashActivity">



        <LinearLayout
            android:id="@+id/ll_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".65"
            android:background="@drawable/shape_rounded_16dp"
            android:backgroundTint="@color/black_trans"
            android:layout_marginHorizontal="@dimen/margin_hor_text"
            android:paddingHorizontal="32dp"
            android:paddingVertical="24dp"
            android:orientation="vertical">

            <com.some_package.nbaquiz.custom_view.CustomTextViewQuestrial
                android:id="@+id/tv_text_splash_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“I can accept failure, everyone fails at something. But I can’t accept not trying.”"
                android:textSize="@dimen/text_size_normal_X2"
                android:textColor="@color/white"
                android:layout_gravity="left"
                />

            <com.some_package.nbaquiz.custom_view.CustomTextViewQuestrial
                android:id="@+id/tv_author_splash_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Michael Jordan"
                android:textSize="@dimen/text_size_normal_X2"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                />


        </LinearLayout>



    <com.some_package.nbaquiz.custom_view.CustomLoading
        android:id="@+id/progress_splash"
        android:layout_width="@dimen/width_progress_splash"
        android:layout_height="@dimen/height_progress_splash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias=".95"
        app:layout_constraintHorizontal_bias=".9"
        />








</androidx.constraintlayout.widget.ConstraintLayout>